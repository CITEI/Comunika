{
  "name": "comunizika_api",
  "version": "1.0.0",
  "scripts": {
    "build": "ts-node build.ts",
    "lint": "eslint . --ext .ts",
    "start": "node ./dist --env=production",
    "stop:docker": "docker-compose down",
    "stop:dev": "npm run stop:docker",
    "start:docker": "npm run stop:dev && docker-compose up",
    "start:watch": "tsnd --respawn --transpile-only --watch src src/index.ts",
    "start:dev": "npm run start:docker -- -d && npm run start:watch"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./server/tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-non-null-assertion": 0
    }
  },
  "eslintIgnore": [
    "src/public/",
    "build.ts"
  ],
  "dependencies": {
    "@adminjs/design-system": "^3.1.8",
    "@adminjs/express": "^5.1.0",
    "@adminjs/mongoose": "^3.0.3",
    "adminjs": "^6.8.7",
    "bcrypt": "^5.0.1",
    "celebrate": "^15.0.1",
    "command-line-args": "^5.2.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-formidable": "^1.2.0",
    "flat": "^5.0.2",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.3",
    "mongoose": "^6.10.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "react": "^18.2.0",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^4.3.0",
    "underscore": "^1.13.3",
    "underscore.string": "^3.3.6",
    "url-join": "^5.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/command-line-args": "^5.2.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/flat": "^5.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/underscore": "^1.11.4",
    "@types/underscore.string": "^0.0.38",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "fs-extra": "^10.0.1",
    "jest": "^27.5.1",
    "ts-node": "^10.6.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
