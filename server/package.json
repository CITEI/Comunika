{
  "name": "EducaZikaAPI",
  "version": "0.0.1",
  "scripts": {
    "build": "./node_modules/.bin/ts-node build.ts",
    "lint": "eslint . --ext .ts",
    "start": "node -r module-alias/register ./dist --env=production",
    "stop:docker": "docker-compose down",
    "stop:dev": "npm run stop:docker",
    "start:docker": "npm run stop:dev && docker-compose up",
    "start:watch": "tsnd --respawn --transpile-only --watch src src/index.ts",
    "start:dev": "npm run start:docker -- -d && npm run start:watch",
    "test": "jest --runInBand",
    "test:watch": "npm test -- --watch"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@services": "dist/services",
    "@repos": "dist/repos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/server",
    "@routes": "dist/routes"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "eslintIgnore": [
    "src/public/",
    "build.ts"
  ],
  "dependencies": {
    "@adminjs/express": "^4.1.3",
    "@adminjs/mongoose": "^2.0.3",
    "@adminjs/upload": "^2.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/validator": "^13.7.1",
    "adminjs": "^5.10.2",
    "bcrypt": "^5.0.1",
    "celebrate": "^15.0.1",
    "command-line-args": "^5.2.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-formidable": "^1.2.0",
    "flat": "^5.0.2",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.3",
    "mongoose": "^6.2.4",
    "morgan": "^1.10.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "react": "^16.14.0",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^4.3.0",
    "underscore": "^1.13.3",
    "underscore.string": "^3.3.6",
    "url-join": "^5.0.0",
    "validator": "^13.7.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-flow": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/command-line-args": "^5.2.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/find": "^0.2.1",
    "@types/flat": "^5.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jasmine": "^3.10.3",
    "@types/jest": "^27.4.1",
    "@types/jsonfile": "^6.1.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/underscore": "^1.11.4",
    "@types/underscore.string": "^0.0.38",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "babel-jest": "^27.5.1",
    "eslint": "^8.10.0",
    "find": "^0.3.0",
    "fs-extra": "^10.0.1",
    "jasmine": "^4.0.2",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "regenerator-runtime": "^0.13.9",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.6.0",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  }
}
